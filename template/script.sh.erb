#!/usr/bin/env bash

# Benchmark info
echo "TIMING - Starting main script at: $(date)"

#
# Start MATLAB Proxy Server
#

# Purge the module environment to avoid conflicts
hostname

module purge

module avail

# Load the required modules
if uname -r | grep -q "el9"; then
  # RHEL 9 environment
  module load default
  APPTAINER_IMAGE=/sw/oodimages/matlab-proxy-rh9.sif
else # RHEL 8 environment
  module load default-s11
  APPTAINER_IMAGE=/sw/oodimages/matlab-proxy.sif
fi

module load <%= context.matlab_version %>

# List loaded modules
module list

# Benchmark info
echo "TIMING - Starting MATLAB at: $(date)"

# Check if we have a GPU
if [ -n "$CUDA_VISIBLE_DEVICES" ]; then
	APPTAINER_GPU_ENABLE="--nv"
else
	APPTAINER_GPU_ENABLE=""
fi

env

# Launch the Jupyter Notebook Server
set -x
apptainer exec --cleanenv ${APPTAINER_GPU_ENABLE} \
	--bind /scratch,/sw,/u,/taiga,/projects,/work,/etc/profile.d,/etc/cray-pe.d,/opt/cray,/var/spool/slurmd/conf-cache:/etc/slurm,/opt/slurm,/var/run/munge \
	--env PATH=${PATH} --env LD_LIBRARY_PATH=${LD_LIBRARY_PATH} --env MLM_LICENSE_FILE=${MLM_LICENSE_FILE} \
	--env MWI_APP_HOST=${MWI_APP_HOST} --env MWI_APP_PORT=${MWI_APP_PORT} \
	--env MWI_AUTH_TOKEN=${MWI_AUTH_TOKEN} \
	--env MWI_MATLAB_STARTUP_SCRIPT="cd ${HOME}" --env MATLAB_HOME=${MATLAB_HOME} \
        ${APPTAINER_IMAGE} matlab-proxy-app
